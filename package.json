{
  "name": "no-paper-api",
  "productName": "NoPaper Print API",
  "version": "1.1.3",
  "description": "NoPaper API bridge between print and NoPaper System",
  "main": "src/index.js",
  "dir": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "build-installer": "electron-builder",
    "build-packager": "electron-packager . NoPaperAPI --platform=win32 --arch=x64 --electronVersion=22.1.0"
  },
  "repository": "https://github.com/vitor93gs/NoPaperAPIUpdater",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.nopaper.printapi",
    "productName": "NoPaper Print API",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/images/logo.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "uninstallDisplayName": "NoPaper Print API",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "NoPaper"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.1",
    "dicer": "^0.3.1",
    "dotenv": "^16.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "mssql": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "oracledb": "^5.5.0",
    "qrcode": "^1.5.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "electron": "^22.1.0",
    "electron-builder": "^23.6.0"
  }
}
